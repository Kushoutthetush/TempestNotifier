<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TempestNotifier"
        x:Class="TempestNotifier.MainWindow"
        mc:Ignorable="d"
        xmlns:util="clr-namespace:Wpf.Util"
        Title="Tempest Notifier v0.3-alpha" Height="324" Width="638" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_hard_refresh" Content="Refresh" HorizontalAlignment="Left" Margin="10,0,0,10" Width="93" Click="button_Click_1" Height="27" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <Label x:Name="lbl_last_update" Margin="31,0,10,0" FontSize="16" VerticalAlignment="Bottom" Height="37" Grid.Column="1"/>
        <ListView x:Name="listview_maps" Margin="10,10,10,48" FontSize="16" Grid.ColumnSpan="2">
            <ListView.Resources>
                <Style TargetType="{x:Type ListViewItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding state}" Value="-1">
                            <Setter Property="Background" Value="#66FF0000" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding state}" Value="-2">
                            <Setter Property="Background" Value="#66FF0000" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding state}" Value="0">
                            <Setter Property="Background" Value="#66FFFF00" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding state}" Value="1">
                            <Setter Property="Background" Value="#6600FF00" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding state}" Value="2">
                            <Setter Property="Background" Value="#6600FF00" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding state}" Value="-100">
                            <Setter Property="Foreground" Value="#99000000" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.Resources>
            <ListView.DataContext>
                <local:Map/>
            </ListView.DataContext>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Map" DisplayMemberBinding="{Binding name}" util:GridViewSort.PropertyName="name"/>
                    <GridViewColumn Header="Tempest" DisplayMemberBinding="{Binding tempest}" Width="Auto" util:GridViewSort.PropertyName="tempest"/>
                    <GridViewColumn Header="Votes" DisplayMemberBinding="{Binding votes}" Width="Auto" util:GridViewSort.PropertyName="votes"/>
                    <GridViewColumn Header="asd" DisplayMemberBinding="{Binding state}" Width="0" util:GridViewSort.PropertyName="state"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
