<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TempestNotifier"
        x:Class="TempestNotifier.MainWindow"
        mc:Ignorable="d"
        Title="Tempest Notifier v0.2-alpha" Height="324" Width="638" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_hard_refresh" Content="Refresh" HorizontalAlignment="Left" Margin="10,0,0,10" Width="93" Click="button_Click_1" Height="27" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <Label x:Name="lbl_last_update" Content="Last update:" Margin="31,0,10,0" FontSize="16" VerticalAlignment="Bottom" Height="37" Grid.Column="1"/>
        <ListView x:Name="listview_maps" Margin="10,10,10,48" FontSize="16" Grid.ColumnSpan="2">
            <ListView.Resources>
                <Style TargetType="{x:Type ListViewItem}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding good}" Value="false">
                            <Setter Property="Background" Value="#66FF0000" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding good}" Value="true">
                            <Setter Property="Background" Value="#6600FF00" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.Resources>
            <ListView.DataContext>
                <local:Map/>
            </ListView.DataContext>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Map" DisplayMemberBinding="{Binding name}" Width="200"/>
                    <GridViewColumn Header="Tempest" DisplayMemberBinding="{Binding tempest}" Width="400"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
